@model SE1617_Group4_A3.Models.Booking

@{
    ViewData["Title"] = "Details Booking";
}
<h1>Booking  Details</h1>

<div id="box-seats">
    @{
        int count = 0;
        for (int i = 0; i < (ViewBag.Room as Room).NumberRows; i++)
        {
            for (int j = 0; j < (ViewBag.Room as Room).NumberCols; j++)
            {
                foreach (char[] item in ViewBag.listBooked as List<char[]>)
                {
                    if (item[count] == '1')
                    {
                        <input class="seats" type="checkbox" name="seats" value="@(count)" checked disabled />
                    }
                    else
                    {
                        <input class="seats" type="checkbox" name="seats" value="@(count)" disabled />
                    }
                }
                count++;
            }
            <br />
        }
    }
</div>
<div id="info-booking" style="width: 25%;">
    <div class="form-group">
        <label class="control-label" asp-for="Name">Name </label><br/>
        <input class="form-control" type="text" asp-for="Name" readonly />
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Amount">Price</label><br />
        <input class="form-control" type="text" asp-for="Amount" readonly />
    </div>
</div>
