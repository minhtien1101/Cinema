@model SE1617_Group4_A3.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Bookig</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking</h4>
    <hr />

    <div id="box-seats">
        @{
            int count = 0;
            for (int i = 0; i < (ViewBag.Room as Room).NumberRows; i++)
            {
                for (int j = 0; j < (ViewBag.Room as Room).NumberCols; j++)
                {
                    foreach (char[] item in ViewBag.listBooked as List<char[]>)
                    {
                        if (item[count] == '1')
                        {
                            <input class="seats" type="checkbox" name="seats" value="@(count)" checked disabled />
                        }
                        else
                        {
                            <input class="seats" type="checkbox" name="seats" value="@(count)" disabled/>
                        }
                    }
                    count++;
                }
                <br />
            }
        }
    </div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Show)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Show.ShowId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <input type="hidden" asp-for="ShowId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.ShowId">Back to List</a>
    </form>
</div>
